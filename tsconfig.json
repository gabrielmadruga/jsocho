{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2021",
    // "module": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["./src/**/*"],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "build"]
  }
}
